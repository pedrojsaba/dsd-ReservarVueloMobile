<p id="notice"><%= notice %></p>

<h1>
  <%= @flight[:obtener_vuelo_response][:return][:codigo_vuelo] %>
</h1>
<p>
  <b>Aerolínea:</b>
  <%= @flight[:obtener_vuelo_response][:return][:aerolinea] %>
</p>

  <div>
   <ul data-role="listview">
      <li>
        <h3>SALIDA</h3>
        <p>
          <%= @flight[:obtener_vuelo_response][:return][:fecha_salida].strftime("%d-%m-%Y - %H:%M") %>
        </p>
        <p class="ui-li-aside"><strong><%= @flight[:obtener_vuelo_response][:return][:ciudad_origen] %></strong></p>
      </li>
      <li>
        <h3>LLEGADA</h3>
        <p>
          <%= @flight[:obtener_vuelo_response][:return][:fecha_llegada].strftime("%d-%m-%Y - %H:%M") %>
        </p>
        <p class="ui-li-aside"><strong><%= @flight[:obtener_vuelo_response][:return][:ciudad_destino] %></strong></p>
      </li>
     </ul>
  </div>


<div data-role="collapsible" data-collapsed="false" data-theme="b" data-content-theme="b">
      <h3>Seleccionar Asiento</h3>
      <br>
  <% if @seats[:obtener_asientos_response][:return] == nil %>  
    <div>
      <b>No hay asientos disponibles.</b>
    </div>
  <% else %>
    <% if @seats.size == 1 %>
      <ul data-role="listview" data-inset="true" data-filter="true">
        <li>            
          <%= link_to "Asiento N° " + @seats[:obtener_asientos_response][:return][:numero] + " - " + @seats[:obtener_asientos_response][:return][:descripcion] , "/seats/"+@seats[:obtener_asientos_response][:return][:id_asiento]+"/edit" %>
        </li>
      </ul>
    <% else %>
      <ul data-role="listview" data-inset="true" data-filter="true">
       <% @seats[:obtener_asientos_response][:return].each do |seat| %>
          <li>            
            <%= link_to "Asiento N° " + seat[:numero] + " - " + seat[:descripcion] , "/seats/"+seat[:id_asiento]+"/edit" %>
          </li>            
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
